# SIE Backend Configuration (Development)
# Copy this file to .env and customize values

# Database - SQLite for local dev, PostgreSQL for production
DATABASE_URL=sqlite:///./sie_dev.db

# Redis (optional for local dev without worker)
REDIS_URL=redis://localhost:6379

# API Configuration
API_SECRET_KEY=your-secret-key-here
DEBUG=true
ENVIRONMENT=development

# Meilisearch (optional)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=

# Sentry (optional)
SENTRY_DSN=

#----------------------------ML-------------------------------
# NLP Configuration
NLP_MODEL=en_core_web_sm
NLP_BATCH_SIZE=100
NLP_SENTIMENT_THRESHOLD=0.05

# OCR Configuration
OCR_LANGUAGES=en
OCR_GPU=false
OCR_PREPROCESS=true
OCR_PREPROCESS_QUALITY=balanced
OCR_CONFIDENCE_THRESHOLD=0.5
OCR_FALLBACK_ENABLED=true

#----------------------------SRE-------------------------------
# Circuit Breaker (SRE Plan ยง6.1)
CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIMEOUT=60
CB_ENABLED=true

# Observability (SRE Plan ยง5.3)
TRACING_ENABLED=false
OTEL_EXPORTER_ENDPOINT=http://localhost:4317
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100

# Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30