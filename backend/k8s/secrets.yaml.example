# SIE Secrets Template
# Copy to secrets.yaml and fill in values, then apply with:
# kubectl apply -f secrets.yaml
#
# IMPORTANT: Do NOT commit secrets.yaml to version control!
# Add secrets.yaml to .gitignore
apiVersion: v1
kind: Secret
metadata:
  name: sie-secrets
  namespace: sie
  labels:
    app.kubernetes.io/name: sie
type: Opaque
stringData:
  # Database connection string
  # Format: postgresql://user:password@host:5432/database
  database-url: "postgresql://sie_user:CHANGE_ME@postgres-host:5432/sie"
  
  # Redis connection string
  # Format: redis://host:6379 or redis://:password@host:6379
  redis-url: "redis://redis-host:6379"
  
  # API secret key - generate with: openssl rand -hex 32
  api-secret-key: "GENERATE_A_SECURE_KEY_HERE"
  
  # Optional: Sentry DSN for error tracking
  sentry-dsn: ""
  
  # Optional: Meilisearch API key
  meilisearch-key: ""
